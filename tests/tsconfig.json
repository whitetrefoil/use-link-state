{
  "extends"        : "../src/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module" : "CommonJS",
    "paths"  : {
      "~/*": [
        "../src/*"
      ]
    }
  },
  "include"        : [
    "../declarations/**/*",
    "../src/**/*",
    "**/*"
  ],
  "exclude"        : [
    "**/node_modules",
    "**/.*",
    "**/~*"
  ]
}
